{
  "name": "personal-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website for Alexis Winters",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imagemin": "imagemin img/* -o dist/img",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "watch:scss": "onchange 'css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexiscodes21/Personal-Portfolio.git"
  },
  "author": "Alexis Winters",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexiscodes21/Personal-Portfolio/issues"
  },
  "homepage": "https://github.com/alexiscodes21/Personal-Portfolio#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "imagemin-cli": "^7.0.0",
    "lite-server": "^2.6.1",
    "node-sass": "^8.0.0",
    "onchange": "^7.1.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^4.3.0",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.3",
    "popper.js": "^1.16.1"
  }
}
